---
import Button from '@components/ui/Button.astro';

interface NavLink {
  label: string;
  href: string;
}

const navLinks: NavLink[] = [
  { label: 'About Us', href: '/' },
  { label: 'Services', href: '/services' },
  { label: 'Use Cases', href: '/contact' },
  { label: 'Pricing', href: '/pricing' },
  { label: 'Blog', href: '/blog' },
];

const currentPath = Astro.url.pathname;
---

<nav class="fixed top-0 left-0 z-50 w-full border-b border-gray-200 bg-white/80 backdrop-blur-md">
  <div class="mx-auto flex h-16 max-w-[88%] items-center justify-between max-sm:px-6">
    <!-- Logo -->
    <a href="/" class="text-xl font-bold text-gray-900">
      <img src="/Logo.png" alt="HeyOz Logo" class="h-10 w-[170px]"  />
    </a>

    <!-- Desktop Nav -->
    <ul class="hidden items-center gap-8 lg:flex">
      {navLinks.map((link) => (
        <li>
          <a
            href={link.href}
            class:list={[
              'text-[1.1rem] font-[400] transition-all duration-300 hover:text-heyOzGreen',
            ]}
          >
            {link.label}
          </a>
        </li>
      ))}

      <Button href="/contact" variant="outline" class="ml-4">Request a quote</Button>
    </ul>

    <!-- Mobile Menu Button -->
    <button
      id="menu-toggle"
      type="button"
      class="inline-flex items-center justify-center rounded-md p-2 text-gray-600 hover:bg-gray-100 hover:text-gray-900 lg:hidden"
      aria-label="Toggle menu"
      aria-expanded="false"
    >
      <svg id="icon-open" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
      <svg id="icon-close" class="hidden h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden border-t border-gray-200 lg:hidden">
    <ul class="space-y-1 px-4 pb-4 pt-2">
      {navLinks.map((link) => (
        <li>
          <a
            href={link.href}
            class:list={[
              'block rounded-md px-3 py-2 text-sm font-medium transition-all duration-300 hover:bg-gray-100 hover:text-dark',
              currentPath === link.href ? 'bg-heyOzGreen/20 text-dark' : 'text-gray-600',
            ]}
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>

<!-- Spacer to offset fixed navbar -->
<div class="h-16"></div>

<script>
  const toggle = document.getElementById('menu-toggle');
  const menu = document.getElementById('mobile-menu');
  const iconOpen = document.getElementById('icon-open');
  const iconClose = document.getElementById('icon-close');

  toggle?.addEventListener('click', () => {
    const isOpen = !menu?.classList.contains('hidden');
    menu?.classList.toggle('hidden');
    iconOpen?.classList.toggle('hidden');
    iconClose?.classList.toggle('hidden');
    toggle.setAttribute('aria-expanded', String(!isOpen));
  });
</script>
