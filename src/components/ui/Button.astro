---
interface Props {
  href?: string;
  variant?: 'primary' | 'outline';
  class?: string;
}

const { href, variant = 'outline', class: className } = Astro.props;

const baseClasses = 'inline-block rounded-xl px-7 py-3 text-[1.1rem] font-[400] transition-all duration-200 hover:scale-[1.04] hover:shadow-lg';

const variants = {
  primary: 'bg-dark text-white hover:bg-heyOzGreen hover:text-dark',
  outline: 'border border-gray-950 text-black hover:bg-dark hover:text-white hover:border-dark',
};

const classes = `${baseClasses} ${variants[variant]} ${className ?? ''}`.trim();

const Tag = href ? 'a' : 'button';
---

<Tag href={href} class={classes}>
  <slot />
</Tag>
